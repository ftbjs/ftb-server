{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "declaration": true,
    /* Experimental Options */
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib",
    "fixtures",
    "example",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
  ]
}
