{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./types/",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    /* Experimental Options */
    "experimentalDecorators": true        /* Enables experimental support for ES7 decorators. */
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}